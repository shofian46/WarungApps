<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Transaksi">

        <!-- Edit text to enter name -->
        <EditText
            android:id="@+id/enterKode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:hint="Enter Kode"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck"
            android:inputType="text"
            android:autofillHints="" />

        <!-- Edit text to enter age -->
        <EditText
            android:id="@+id/enterNoMeja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:hint="Nomor Meja"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck"
            android:inputType="number" />

        <!-- Edit text to enter kode -->
        <EditText
            android:id="@+id/enterPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:hint="Enter Price"
            android:textSize="12sp"
            android:inputType="number"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/enterDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Enter date"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck"
            android:importantForAutofill=""
            android:inputType="date" />

        <!-- Edit text to enter age -->
        <EditText
            android:id="@+id/enterJam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:hint="@string/enter_time"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck" />



        <!-- Button to add Name -->
        <Button
            android:id="@+id/addName2"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@color/colorPrimary"
            android:text="Order"
            android:textColor="#ffffff"
            android:textSize="12sp"
            tools:ignore="TextContrastCheck" />

        <!-- Button to print Name -->
        <Button
            android:id="@+id/printName"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@color/colorPrimary"
            android:text="Print Name"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Text view to get all name -->
            <TextView
                android:id="@+id/NoMeja"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1sp"
                android:text="No Meja\n\n"
                android:textSize="12sp"
                android:padding="10sp"
                android:textColor="#000000"/>

            <!-- Text view to get all ages -->
            <TextView
                android:layout_weight="1"
                android:id="@+id/Kode"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1sp"
                android:text="Kode\n\n"
                android:textSize="12sp"
                android:padding="1sp"
                android:textColor="#000000"/>

            <!-- Text view to get all ages -->
            <TextView
                android:layout_weight="1"
                android:id="@+id/Price"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1sp"
                android:text="Price\n\n"
                android:textSize="12sp"
                android:padding="1sp"
                android:textColor="#000000"/>

            <!-- Text view to get all ages -->
            <TextView
                android:layout_weight="1"
                android:id="@+id/Date"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1sp"
                android:text="Date\n\n"
                android:textSize="12sp"
                android:padding="1sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/Time"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1sp"
                android:text="Time\n\n"
                android:textSize="12sp"
                android:padding="1sp"
                android:textColor="#000000"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>